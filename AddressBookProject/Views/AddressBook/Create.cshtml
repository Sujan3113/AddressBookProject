@using AddressBook.Contracts.Dto
@model AddDto

<form method="post" enctype="multipart/form-data">
    <fieldset class="border border-secondary mb-3 p-3 rounded">

        <legend class="text-decoration">Personal Detail: </legend>
        <div class="row">
            <div class="col-4 mb-2">
                <label>FirstName</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="col-4 mb-2">
                <label asp-for="MiddleName"></label>
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>

            <div class="col-4 mb-2">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-4 mb-2">
                <label asp-for="ProfilePicture"></label>
                <input type="file" asp-for="ProfilePicture" class="form-control" accept="image/x-png,image/gif,image/jpeg" />
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>

            <div class="col-4 mb-2">
                <label asp-for="Relationship"></label>
                @Html.DropDownListFor(model => model.Relationship, Model.Relationships, new {@class = "form-control"})
                @*<select asp-for="Gender" class="form-control"></select>*@
                <span asp-validation-for="Relationship" class="text-danger"></span>
            </div>

        </div>

        <hr />

        <legend class="text-decoration">Email Details:</legend>
        <div class="row">
            <div class="col-4 mb-2">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-4 mb-2">
                <label asp-for="EmailType"></label>
               @Html.DropDownListFor(model => model.EmailType, Model.EmailTypes, new {@class = "form-control"})
                <span asp-validation-for="EmailType" class="text-danger"></span>
            </div>
        </div>

        <hr />

        <legend class="text-decoration">Company Details:</legend>
        <div class="row">
            <div class="col-4 mb-2">
                <label asp-for="CompanyName"></label>
                <input asp-for="CompanyName" class="form-control" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="col-4 mb-2">
                <label asp-for="Department"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
        </div>

        <hr />

        <legend class="text-decoration">Phone Details:</legend>
        <div class="row">
            <div class="col-4 mb-2">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" maxlength="10" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-4 mb-2">
                <label asp-for="NumberType"></label>
                @Html.DropDownListFor(model => model.NumberType, Model.NumberTypes, new {@class = "form-control"})
                <span asp-validation-for="NumberType" class="text-danger"></span>
            </div>
        </div>
        <hr />

        <legend class="text-decoration">Permanent Address:</legend>
        <div class="row">
            <div class="col-4 mb-2">
                <label asp-for="PermanentPlaceName"></label>
                <input asp-for="PermanentPlaceName" class="form-control" />
                <span asp-validation-for="PermanentPlaceName" class="text-danger"></span>
            </div>
            <div class="col-4 mb-2">
                <label asp-for="PermanentDistrict"></label>
                <input asp-for="PermanentDistrict" class="form-control" />
                <span asp-validation-for="PermanentDistrict" class="text-danger"></span>
            </div>
            <div class="col-4 mb-2">
                <label asp-for="PermanentProvince"></label>
                @Html.DropDownListFor(model => model.PermanentProvince, Model.PermanentProvinces, new {@class = "form-control"})
                <span asp-validation-for="PermanentProvince" class="text-danger"></span>
            </div>
        </div>

        <hr />
        <legend class="text-decoration">Temporary Address:</legend>
        <div class="row">
            <div class="col-4 mb-2">
                <label asp-for="TempPlaceName"></label>
                <input asp-for="TempPlaceName" class="form-control" />
                <span asp-validation-for="TempPlaceName" class="text-danger"></span>
            </div>
            <div class="col-4 mb-2">
                <label asp-for="TempDistrict"></label>
                <input asp-for="TempDistrict" class="form-control" />
                <span asp-validation-for="TempDistrict" class="text-danger"></span>
            </div>
            <div class="col-4 mb-2">
                <label asp-for="TempProvince"></label>
                @Html.DropDownListFor(model => model.TempProvince, Model.TempProvinces, new {@class = "form-control"})
                <span asp-validation-for="TempProvince" class="text-danger"></span>
            </div>
        </div>
        
        <hr />


        <div align="center" class="col-12 mb-2">
            <button class="btn btn-primary w-25 mr-2" type="submit">Add</button>
            <a class="btn btn-secondary w-25" asp-controller="AddressBook" asp-action="Index">Cancel</a>
        </div>
    </fieldset>
</form>